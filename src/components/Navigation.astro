---
import "../styles/global.css";

type MenuItemType = {
    url: string | URL | null | undefined,
    label: string | unknown,
}

// Recuperer les props pass√©es a notre composant
const { id, menu } = Astro.props;

---

<div id={id} class="hidden md:flex absolute md:static top-full left-0 text-brand dark:text-white w-full  m-0 flex-col md:flex-row bg-amber-50 md:bg-transparent items-center justify-center">

    {menu.map((item: MenuItemType ) => {
        return (
            <a class="block font-bold hover:bg-orange focus:bg-orange uppercase text-center text-xl py-3.5 px-20" href={item.url}>
                {item.label}
            </a>
        )
    })}
</div>
